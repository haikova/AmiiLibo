<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.AmiiLibo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/red_e1</item>
    <item name="colorPrimaryVariant">@color/red_e1</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorSecondary">@color/gray_39</item>
    <item name="colorSecondaryVariant">@color/gray_39</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="Primary">@color/red_e1</item>
    <item name="Secondary">@color/gray_39</item>
    <item name="Contrast">@color/gray_45</item>
    <item name="Contrast2">@color/white</item>
    <item name="Base">@color/white</item>
    <item name="Neutral300">@color/gray_d7</item>
    <item name="Neutral500">@color/gray_96</item>
    <item name="Neutral700">@color/gray_79</item>
    <item name="Neutral900">@color/gray_5c</item>
    <item name="fontFamily">@font/poppins</item>
    <item name="chipStyle">@style/FilterChip</item>
  </style>

  <!-- BottomSheetDialog theme -->
  <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
    <item name="colorPrimary">@color/red_e1</item>
    <item name="colorPrimaryVariant">@color/red_e1</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorSecondary">@color/gray_39</item>
    <item name="colorSecondaryVariant">@color/gray_39</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="bottomSheetStyle">@style/RoundedBottomSheetModalStyle</item>
    <item name="chipStyle">@style/FilterChip</item>
  </style>

  <style name="RoundedBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/background_bottom_sheet</item>
  </style>

  <!-- Typography -->

  <style name="Heading1">
    <item name="fontFamily">@font/poppins_medium</item>
    <item name="android:fontFamily">@font/poppins_medium</item>
    <item name="android:textSize">36sp</item>
  </style>
  <style name="Heading2">
    <item name="fontFamily">@font/poppins_medium</item>
    <item name="android:fontFamily">@poppins_medium/poppins</item>
    <item name="android:textSize">24sp</item>
  </style>
  <style name="Caption1">
    <item name="fontFamily">@font/poppins_medium</item>
    <item name="android:fontFamily">@font/poppins_medium</item>
    <item name="android:textSize">18sp</item>
  </style>
  <style name="Caption2">
    <item name="fontFamily">@font/poppins_medium</item>
    <item name="android:fontFamily">@font/poppins_medium</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Caption3">
    <item name="fontFamily">@font/poppins_semibold</item>
    <item name="android:fontFamily">@font/poppins_semibold</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Caption4">
    <item name="fontFamily">@font/poppins_light</item>
    <item name="android:fontFamily">@font/poppins_light</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Caption5">
    <item name="fontFamily">@font/poppins_medium</item>
    <item name="android:fontFamily">@font/poppins_medium</item>
    <item name="android:textSize">12sp</item>
  </style>
  <style name="Body1">
    <item name="fontFamily">@font/poppins</item>
    <item name="android:fontFamily">@font/poppins</item>
    <item name="android:textSize">20sp</item>
  </style>
  <style name="Body2">
    <item name="fontFamily">@font/poppins</item>
    <item name="android:fontFamily">@font/poppins</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Body3">
    <item name="fontFamily">@font/poppins</item>
    <item name="android:fontFamily">@font/poppins</item>
    <item name="android:textSize">10sp</item>
  </style>

  <style name="TextAppearanceButton">
    <item name="fontFamily">@font/poppins_medium</item>
    <item name="android:fontFamily">@font/poppins_medium</item>
    <item name="android:textSize">18sp</item>
    <item name="textAllCaps">false</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="ShapeAppearanceSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">30dp</item>
  </style>
  <style name="ThemeOverlayButton" parent="">
    <item name="colorPrimary">?Primary</item>
    <item name="colorOnPrimary">@color/white</item>
  </style>
  <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textAppearance">@style/TextAppearanceButton</item>
    <item name="shapeAppearance">@style/ShapeAppearanceSmallComponent</item>
    <item name="materialThemeOverlay">@style/ThemeOverlayButton</item>
    <item name="elevation">4dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
  </style>
  <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="backgroundTint">?Contrast2</item>
    <item name="elevation">4dp</item>
  </style>

  <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
    <item name="tabTextAppearance">@style/Caption3</item>
    <item name="tabTextColor">?Secondary</item>
    <item name="tabIndicatorHeight">4dp</item>
  </style>

  <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Entry">
    <item name="android:textAppearance">@style/Caption2</item>
    <item name="android:textColor">@color/selector_chip_text</item>
    <item name="chipBackgroundColor">@color/background_chip</item>
    <item name="checkedIconVisible">false</item>
    <item name="closeIconVisible">false</item>
    <item name="chipMinTouchTargetSize">44dp</item>
  </style>

  <style name="SearchTextFieldStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
    <item name="backgroundColor">@android:color/transparent</item>
    <item name="boxStrokeWidth">0dp</item>
    <item name="boxStrokeWidthFocused">0dp</item>
    <item name="endIconDrawable">@drawable/ic_clear</item>
    <item name="endIconTint">?Neutral900</item>
  </style>
</resources>