<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AmiiLibo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red_db</item>
        <item name="colorPrimaryVariant">@color/red_db</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="Primary">@color/red_db</item>
        <item name="Secondary">@color/white</item>
        <item name="Contrast">@color/gray_ef</item>
        <item name="Contrast2">@color/gray_30</item>
        <item name="Base">@color/black</item>
        <item name="Neutral300">@color/gray_30</item>
        <item name="Neutral500">@color/gray_6a</item>
        <item name="Neutral700">@color/gray_b2</item>
        <item name="Neutral900">@color/gray_e7</item>
        <item name="chipStyle">@style/FilterChip</item>
    </style>

    <!-- BottomSheetDialog theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/red_db</item>
        <item name="colorPrimaryVariant">@color/red_db</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="bottomSheetStyle">@style/RoundedBottomSheetModalStyle</item>
        <item name="chipStyle">@style/FilterChip</item>
    </style>

    <style name="RoundedBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>
</resources>