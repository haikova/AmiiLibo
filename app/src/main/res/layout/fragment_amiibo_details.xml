<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:background="@android:color/holo_purple">

  <ImageView
    android:id="@+id/amiiboImage"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_marginTop="24dp"
    android:src="@drawable/amiibo_thumb"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/nameData" />

  <TextView
    android:id="@+id/nameData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Princess Zelda"
    android:textSize="32dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Princess Zelda" />

  <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/rounded_background"
    app:layout_constraintBottom_toBottomOf="@id/descriptionBottomSpace"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/descriptionTopSpace" />

  <Space
    android:id="@+id/descriptionTopSpace"
    android:layout_width="0dp"
    android:layout_height="24dp"
    android:layout_marginTop="24dp"
    app:layout_constraintBottom_toTopOf="@id/amiiboSeriesTitle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/amiiboImage" />


  <TextView
    android:id="@+id/amiiboSeriesTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:text="Amiibo Series"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/descriptionTopSpace" />

  <TextView
    android:id="@+id/amiiboSeriesData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:text=""
    app:layout_constraintBottom_toBottomOf="@id/amiiboSeriesTitle"
    app:layout_constraintStart_toEndOf="@id/titlesBarrier"
    app:layout_constraintTop_toTopOf="@id/amiiboSeriesTitle"
    tools:text="Legend of Zelda" />

  <TextView
    android:id="@+id/characterTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="12dp"
    android:text="Character"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/amiiboSeriesTitle" />

  <TextView
    android:id="@+id/characterData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:text=""
    app:layout_constraintBottom_toBottomOf="@id/characterTitle"
    app:layout_constraintStart_toEndOf="@id/titlesBarrier"
    app:layout_constraintTop_toTopOf="@id/characterTitle"
    tools:text="Zelda" />

  <TextView
    android:id="@+id/gameSeriesTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="12dp"
    android:text="Game Series"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/characterTitle" />

  <TextView
    android:id="@+id/gameSeriesData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:text=""
    app:layout_constraintBottom_toBottomOf="@id/gameSeriesTitle"
    app:layout_constraintStart_toEndOf="@id/titlesBarrier"
    app:layout_constraintTop_toTopOf="@id/gameSeriesTitle"
    tools:text="Legend of Zelda" />

  <TextView
    android:id="@+id/jpTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="12dp"
    android:text="Japan Release"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/gameSeriesTitle" />

  <TextView
    android:id="@+id/jpData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    app:layout_constraintBottom_toBottomOf="@id/jpTitle"
    app:layout_constraintStart_toEndOf="@id/titlesBarrier"
    app:layout_constraintTop_toTopOf="@id/jpTitle"
    tools:text="yyyy-mm-dd" />

  <TextView
    android:id="@+id/euTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="12dp"
    android:text="Europe Release"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/jpTitle" />

  <TextView
    android:id="@+id/euData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    app:layout_constraintBottom_toBottomOf="@id/euTitle"
    app:layout_constraintStart_toEndOf="@id/titlesBarrier"
    app:layout_constraintTop_toTopOf="@id/euTitle"
    tools:text="yyyy-mm-dd" />

  <TextView
    android:id="@+id/naTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="12dp"
    android:text="North America Release"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/euTitle" />

  <TextView
    android:id="@+id/naData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    app:layout_constraintBottom_toBottomOf="@id/naTitle"
    app:layout_constraintStart_toEndOf="@id/titlesBarrier"
    app:layout_constraintTop_toTopOf="@id/naTitle"
    tools:text="yyyy-mm-dd" />

  <TextView
    android:id="@+id/auTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="12dp"
    android:text="Australia Release"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/naTitle" />

  <TextView
    android:id="@+id/auData"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    app:layout_constraintBottom_toBottomOf="@id/auTitle"
    app:layout_constraintStart_toEndOf="@id/titlesBarrier"
    app:layout_constraintTop_toTopOf="@id/auTitle"
    tools:text="yyyy-mm-dd" />

  <androidx.constraintlayout.widget.Barrier
    android:id="@+id/titlesBarrier"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:barrierDirection="end"
    app:constraint_referenced_ids="amiiboSeriesTitle, gameSeriesTitle, jpTitle, euTitle, naTitle, auTitle" />


  <Space
    android:id="@+id/descriptionBottomSpace"
    android:layout_width="0dp"
    android:layout_height="24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/auData" />
</androidx.constraintlayout.widget.ConstraintLayout>