<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:background="@drawable/amiibo_item_border">

  <ImageView
    android:id="@+id/imageViewAmiibo"
    android:layout_width="0dp"
    android:layout_height="64dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:src="@drawable/amiibo_thumb"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/amiibo_thumb" />

  <TextView
    android:id="@+id/nameText"
    style="@style/Caption2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:ellipsize="end"
    android:gravity="center"
    android:lines="1"
    android:textColor="@color/gray_45"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageViewAmiibo"
    tools:text="Mario" />

  <TextView
    android:id="@+id/gameText"
    style="@style/Body3"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:ellipsize="end"
    android:gravity="center"
    android:lines="1"
    android:textColor="?attr/Neutral700"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/nameText"
    tools:text="Super mario bros" />

  <ImageView
    android:id="@+id/itemIcon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:background="@drawable/background_item_amiibo_icon"
    android:foregroundGravity="center"
    android:padding="4dp"
    android:visibility="gone"
    tools:visibility="visible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/ic_favourite_added" />
</androidx.constraintlayout.widget.ConstraintLayout>